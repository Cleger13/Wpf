<Window x:Class="Поликлиника.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Поликлиника"
        mc:Ignorable="d"
        Title="WelcomeWindow" Height="450" Width="800">
    <Grid Background="LightGray">
        <Label Content="Добро пожаловать, " Height="60" Width="360" FontSize="36" Margin="0,0,400,239" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
               HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Button Content="Расписание" Click="Button_Click_Table" Height="50" Width="100" Margin="0,0,460,93"
                Background="BlueViolet" Foreground="White"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Button Content="Выйти" Click="Button_Click_Exit" Height="50" Width="100" Margin="0,0,240,93" 
                Background="BlueViolet" Foreground="White" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <TextBox Name="textBoxUser" Height="50" Width="366" Margin="0,0,34,244" FontSize="24" 
                 HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
